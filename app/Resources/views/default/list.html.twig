{% extends 'base.html.twig' %}

{% block title %}List{% endblock %}

{% block body %}
    <div id="wrapper">
        <div class="container justify-content-center">
            <div id="movies">
                {% for  movie  in movies %}
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ movie.title }}</h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

{% block metas %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container{

        }
        #movies{
            display: flex;
            flex-direction: column;
            width: 50%;
            margin: auto;
            margin-top: 100px;
            align-items: center;
        }
        .card{
            margin-bottom: 10px;
            text-align: center;
        }
    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
